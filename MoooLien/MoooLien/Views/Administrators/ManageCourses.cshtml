@model MoooLien.Models.ViewModel.CourseViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Manage Courses</h2>

<p>
    <a href="~/Courses/Create" class="btn btn-primary">Create Course</a>
</p>

@Html.AntiForgeryToken()

<div>
    <table class="table table-hover">
        <tbody>
            @foreach (var x in Model.courses)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Enrole", "Administrators", new { id = x.ID})">
                            @x.name
                        </a>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "ManageCourses", new { id = User.Identity }, new { @class = "green" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "ManageCourses", new { id = User.Identity }, new { @class = "red" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

