                @Html.ValidationMessageFor(model => model.courses, "", new { @class = "text-danger" })
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = User.Identity }, new { @class = "green" }) |
                @Html.ActionLink("Delete", "Remove", new { id = User.Identity }, new { @class = "red" })
            </td>

        </tr>

    }
