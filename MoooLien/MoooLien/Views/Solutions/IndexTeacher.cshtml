@model IEnumerable<MoooLien.Models.Entities.Assignment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<h2>My Assignments</h2>

<p>
    <a href="@Url.Action("Create", "Assignments", new { id = ViewBag.courseID }) " class="btn btn-primary">Create Assignment</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
    <td>
        @Html.ActionLink("Grades", "Grades", new { id = item.ID }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
    </td>
    </tr>
    }

    </table>
