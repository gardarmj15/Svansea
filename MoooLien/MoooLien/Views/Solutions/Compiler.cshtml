@model MoooLien.Models.ViewModel.SolutionViewModel

@{
    ViewBag.Title = "C++ Compile test page";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<h2>C++ Compile</h2>
<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm())
        {
            <input type="Submit" class="btn btn-primary" value="Compile Code" />}
        
        <br />

        @if (ViewBag.Output != null)
        {
            <ol>
                @foreach (var line in ViewBag.Output)
                {
                    <li>@line</li>
                }
            </ol>}
        <div>
            <h4>
                Solution status: @Html.ViewBag.status
            </h4>
        </div>
    </div>
    <div>
        <p>
            @Html.DisplayFor(model => model.theSolution)
        </p>
    </div>
</div>

