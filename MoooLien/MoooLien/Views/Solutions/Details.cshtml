@model MoooLien.Models.Entities.Assignment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

<h2>Hand-in for @Html.DisplayFor(model => model.name) </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt>
            Solution
        </dt>
        <dd>
            @Html.DisplayFor(model => model.solution)
        </dd>
        <dt>
           Start date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.startDate)
        </dd>
        <dt>
            End date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.endDate)
        </dd>
    </dl>
</div>

<h3>Hand-in your solution </h3>

@using (Html.BeginForm("UploadStatus", "Solutions", new { id = ViewBag.assId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" id="file" accept=".txt, .cpp" /> <br />
    <input type="submit" value="Upload" />
}

<p>File  uploaded to: @ViewBag.Path</p>

<br />
<p>
    @*<a href="~/Solutions/Compiler" class="btn btn-primary">Test my code</a>*@
    <a href="@Url.Action("Compiler", "Solutions", new { id = ViewBag.assId }) " class="btn btn-primary">Test my code</a>
</p>
<div>
    <br />
    <br />
    @Html.ActionLink("Back to My Courses", "UserIndex","Courses")
</div>

