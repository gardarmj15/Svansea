@model MoooLien.Models.ViewModel.CourseViewModel

@{
    ViewBag.Title = "";
}

<h2>Courses</h2>

<p>
    <a href="~/Courses/Create" class="btn btn-success">Create Course</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var course in Model.courses) {
    <tr>
        <td>
            @course.name
        </td>
        <td>
            @course.description
        </td>
        <td width="10%">
            @Html.ActionLink("Edit", "Edit", new { id=course.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=course.ID })
        </td>
    </tr>
}

</table>
