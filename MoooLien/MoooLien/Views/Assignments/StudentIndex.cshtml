@model MoooLien.Models.ViewModel.AssignmentViewModel

@{
    ViewBag.Title = "StudentIndex";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>My Assignments</h2>

<div>
    <table class="table-bordered table table-striped table-responsive table-hover">
        <tbody>
            @foreach (var x in Model.assignments)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Solutions", new { id = x.ID})">
                            @x.name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Back to My Courses", "UserIndex", "Courses")
    </div>
</div>
