    ViewBag.Title = "Admin Corses";
}

<!-- Breadcrumbs code begin -->
<div>
    <ol class="breadcrumb" style="margin: 5px;">
        <li><a href="#">Admin</a></li>
        <li><a href="#">Course</a></li>
        <li class="active">Manage Course </li>
    </ol>
</div>
<!-- Breadcrumbs code ends -->
